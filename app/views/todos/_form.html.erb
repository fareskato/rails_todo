<% if @todo.errors.any?  %>
    <h2>Errors :</h2>
    <ul>
      <% @todo.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for @todo do |f| %>
    <p>
      <%= f.label :name %> <br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %> <br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>
<%= link_to 'All Todos', todos_path %>